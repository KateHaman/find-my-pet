<nav class="navbar navbar-expand-lg navbar-light sticky-top" style="background-color: #b2d8d8;">
  <div class="container d-flex justify-content-between">
    <div class="d-flex align-items-center">
      <%= link_to root_path do %>
        <%= image_tag("paw-print.png", height: '30', width: '30', class: "d-inline-block align-top") %>
      <% end %>
      <%= link_to "FindMyPet", root_path, class: "text-dark text-decoration-none ms-2" %>
    </div>
    <form class="d-flex">
      <% if current_user %>
        <%= link_to "Profile", user_path(current_user), class: "btn btn-outline-dark me-1 nav-Link #{yield(:profile_active)}" %>
        <%= link_to "Logout ", destroy_user_session_path, method: :delete, class: 'btn btn-outline-dark ms-1' %>
      <% else %>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#loginModal">
          Log In
        </button>
        <%= link_to "Get Started ", new_user_registration_path, class: "btn btn-outline-dark ms-1 nav-Link #{yield(:get_started_active)}" %>
      <% end %>
      <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
        <li class="dropdown">
          <%= link_to '#', class: 'nav-link px-2 dropdown-toggle text-black',
                      data: { "bs-toggle": 'dropdown' } do %>
            <%= tag.div '', class: "flag #{I18n.locale}-flag mt-1" %>
            <%= t I18n.locale %>
          <% end %>

          <ul class="dropdown-menu">
            <% I18n.available_locales.each do |locale| %>
              <li>
                <% if I18n.locale == locale %>
                  <%= tag.span t(locale), class: 'dropdown-item' %>
                <% else %>
                  <%= link_to t(locale), url_for(locale: locale),
                              class: 'dropdown-item' %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </form>
  </div>
</nav>
