<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Log in</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>

          <div class="field">  <%= form_for :users do |f| %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password', class: 'form-control mt-3' %>
              </div>

              <div class="field  mt-3">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>

              <%#= link_to 'Forgot your password', new_password_path(@user), class: 'text-dark mt-5 mb-4' %>

              <div class="actions mt-4 text-center">
                <button type="button" class="btn btn-outline-dark me-4" data-bs-dismiss="modal">Close</button>
                <%= f.submit "Log in", class: 'btn btn-dark' %>
            <% end %>
            </div>
            </form>
      </div>
    </div>
  </div>
</div>
