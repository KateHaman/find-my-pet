<% @posts.each do |post| %>
  <div class="card m-2 mb-2 col-md-4 col-lg-3">
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.content %></p>
    </div>
  </div>
<% end %>
<% if @posts.count == 0 %>
  <p>At the moment, there are no posts available.</p>
<% end %>
