<div class="container d-flex flex-row justify-content-between p-0">
  <div class="container avatar-container mt-5 d-flex justify-content-center p-0">
    <% if current_user.avatar.attached? %>
      <%= image_tag current_user.avatar, width: '200px', height: '200px', class: 'rounded-circle' %>
    <% else %>
      <%= image_tag("avatar.png", height: '200', width: '200', class: 'rounded-circle') %>
    <% end %>
  </div>
  <div class="container personal-data-container mt-5 p-0">
    <h2><%= @user.name %></h2>
<!--    <h5 class="mt-4">Your pets:</h5>-->
<!--    <p>pet name-->
<!--      <i class="fa-solid fa-pen-to-square"></i>-->
<!--      <i class="fa-solid fa-trash"></i>-->
<!--    </p>-->
  </div>
  <div class="container actions-container mt-5 d-flex justify-content-between align-items-baseline p-0">
    <%= link_to "Create a Post", root_path, class: 'btn btn-outline-dark me-1' %>
    <%= link_to "Edit Profile", edit_user_registration_path, class: 'btn btn-dark me-1' %>
    <%= link_to "Destroy Profile", registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-dark me-1' %>
  </div>
</div>
