<% provide(:page_title, 'Pet Profile') %>
<% provide(:profile_active, 'active') %>

<div class="row mt-5">
  <div class="col-2">
    <%= link_to 'Back', :back, class: 'btn btn-outline-dark' %>
  </div>
  <div class="col-10 text-center">
    <h2 class="m-0"><%= (@pet.name).upcase %>`S PROFILE</h2>
  </div>
</div>

<div class="row mb-5 mt-5">
  <div class="col-12 text-center mt-3 mb-2 col-sm-6">
    <% if @pet.avatar.attached? %>
      <%= image_tag @pet.avatar, width: '200px', height: '200px', class: 'rounded-circle border-dark' %>
    <% else %>
      <%= image_tag("paw-print.png", height: '200', width: '200', class: 'rounded-circle border-dark') %>
    <% end %>
  </div>

  <div class="col-12 text-center mt-3 mb-2 col-sm-6 text-sm-start">
    <h5>PERSONAL INFO:</h5>

    <p class="mb-2">
      <% if @pet.breed? %>
        <b>Breed:</b>
        <%= @pet.breed %>
      <% end %>
    </p>

    <p class="mb-2">
      <b>Gender:</b>
      <%= @pet.sex %>
    </p>

    <p class="mb-2">
      <b>Is sterilized:</b>
      <% if @pet.sterilized? %>
        yes
      <% else %>
        no
      <% end %>
    </p>

    <p class="mb-2">
      <b>DOB:</b>
      <%= @pet.date_of_birth.to_time.strftime('%B %e, %Y') %>
    </p>

    <p class="mb-2">
      <b>Color:</b>
      <%= @pet.color %>
    </p>

    <p class="mb-2">
      <% if @pet.additional_info? %>
        <b>Additional Info:</b>
        <%= @pet.additional_info %>
      <% end %>
    </p>
  </div>
</div>