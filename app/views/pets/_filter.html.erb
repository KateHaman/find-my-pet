<div class="d-flex flex-row justify-content-between align-items-center"><h5 class="p-0 m-0 mb">Filter by:</h5>
  <%= link_to "Clear", request.path, class: "btn btn-outline-dark p-o" %>
</div>
<hr>
<%= search_form_for @q, url: user_pets_path, method: :get do |f| %>
  <%= f.label :name, 'Name:' %>
  <%= f.text_field :name_cont, class: 'form-control' %>

  <div class="form-group mt:"><%= f.label :species, 'Species:', class: 'mt-3' %>
    <%= f.select(:species_eq, options_for_select(Pet.species.map { |k, v| [k.humanize.capitalize, v] },
                                                 f.object.species_eq), { prompt: 'please choose species' },
                 { class: "form-select" }) %></div>

  <%= search_form_for @q, url: user_pets_path, method: :get do |f| %>
    <%= f.label :breed, 'Breed:', class: 'mt-3' %>
    <%= f.text_field :breed_cont, class: 'form-control' %>

    <div class="form-group mt-3"><%= f.check_box :sterilized_true, include_hidden: false, class: 'form-check-input' %>
      <%= f.label :sterilized, 'Sterilized' %></div>

    <div class="form-group mt:"><%= f.label :sex, 'Gender:', class: 'mt-3' %>
      <%= f.select(:sex_eq, options_for_select(Pet.sexes.map { |k, v| [k.humanize.capitalize, v] },
                                                   f.object.sex_eq), { prompt: 'please choose gender' },
                   { class: "form-select" }) %></div>

    <%= search_form_for @q, url: user_pets_path, method: :get do |f| %>
      <%= f.label :color, 'Color:', class: 'mt-3' %>
      <%= f.text_field :color_cont, class: 'form-control' %>

      <div class="d-flex justify-content-center mt-3">
        <%= f.submit 'Filter', class: 'btn btn-dark' %>
      </div>
    <% end %>
  <% end %>
<% end %>
