<% provide(:page_title, 'Log In') %>

<div class="row d-flex justify-content-center">
  <div class="col-12 col-sm-8 col-md-6 col-lg-3">
    <h2 class="text-center mt-5 mb-5">LOG IN</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
        <p class="m-0">* This field is required.</p>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mt-3', placeholder: 'Password' %>
        <p class="m-0">* This field is required.</p>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-2">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-dark mt-3' %>
      </div>
    <% end %>
    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
