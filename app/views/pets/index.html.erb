<% provide(:page_title, 'Pet Profiles') %>

<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-sm-12 col-md-4 col-lg-3 mb-5 col-12">
      <div class="d-flex flex-column flex-shrink-0 p-3 border border-dark rounded">
        <%= render 'filter' %>
      </div>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-9 col-12">
      <% if @q.result.empty? %>
        <%= render 'no_results' %>
      <% else %>
        <%= render 'sorting' %>
        <%= render 'pet' %>
      <% end %>
      <div class="d-flex justify-content-center">
        <%= paginate @pets %>
      </div>
    </div>
  </div>
</div>
