<% provide(:page_title, 'Reset Password') %>

<div class="row d-flex justify-content-center">
  <div class="col-md-6 col-lg-4">
    <h2 class="text-center mt-5 mb-5">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="container text-center">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="actions mt-3 text-center">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-dark' %>
      </div>
    <% end %>

    <div class="login-link mt-4">
      <% if controller_name != 'sessions' %>
        <%= link_to "Click here to Log In", new_session_path(resource_name), class:'text-dark' %>
      <% end %>
    </div>

    <div>
      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Click here to Create Profile", new_registration_path(resource_name), class:'text-dark' %>
      <% end %>
    </div>

  </div>
</div>
