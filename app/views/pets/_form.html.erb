<div class="text-muted">
  <%= form_with model: [@user, @user.pets.build] do |form| %>

    <div class="field">
      <%== form.text_field :name, autofocus: true, required: true, class: 'form-control', placeholder: true %>
      <p class="p-0 mb-2">* This field is required.</p>
    </div>

    <div class="field">
      <p class="p-0 m-0"><b><%= t('.mypet_html') %></b></p>
      <%= form.select(:species, Pet.species.map { |k, v| [k.humanize, k] }, {}, { class: 'form-select mb-2' }) %>
    </div>

    <div class="field">
      <%== form.text_field :breed, autofocus: true, class: 'form-control mb-2', placeholder: true %>
    </div>

    <div class="field">
      <p class="mb-0"><b><%= t('.select_html') %></b></p>
      <p class="mb-0"><%= form.radio_button :sex, 'male', checked: true, class: 'form-check-input me-2' %>
        Male</p>
      <p class="mb-0"><%= form.radio_button :sex, 'female', class: 'form-check-input me-2' %> Female</p>
      <p class="mb-2"><%= form.radio_button :sex, 'undefined', class: 'form-check-input me-2' %> Prefer not to
        Say</p>
    </div>

    <div class="field">
      <p class="mb-2">
        <%= form.check_box :sterilized, class: 'form-check-input' %>
        <b><%= form.label :sterilized, t('.pet'), class: 'ms-2 font-bold' %></b>
      </p>
    </div>

    <div class="field input-group-text mb-2 text-muted">
    <span><b><%= t('.birthday_html') %></b><br>
      <%= form.date_select(:date_of_birth, autofocus: true, order: [:day, :month, :year], start_year: Date.current.year, end_year: Date.current.year - 15) %></span>
    </div>

    <div class="field">
      <%== form.text_field :color, autofocus: true, required: true, class: 'form-control mb-2', placeholder: true %>
    </div>

    <div class="field">
      <%== form.text_area :additional_info, autofocus: true, class: 'form-control mb-2', placeholder: true %>
    </div>
    </div>

    <div class="container d-flex justify-content-center">
      <%= form.submit t('.save'), class: 'btn btn-dark' %>
      <%= link_to t('.cancel'), user_path, class: 'btn btn-outlined-dark' %>
    </div>
  <% end %>
